<Window
    x:Class="LyricAnimator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="300"
    mc:Ignorable="d">

    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="Width" Value="150" />
            </Style>

            <Style TargetType="{x:Type TextBox}">
                <Setter Property="Width" Value="250" />
            </Style>
        </StackPanel.Resources>

        <StackPanel Orientation="Horizontal">
            <Label>Path to ffmpeg:</Label>
            <TextBox Text="{Binding PathToFfmpeg}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label>Config directory:</Label>
            <TextBox Text="{Binding ConfigDirectory}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label>Output directory:</Label>
            <TextBox Text="{Binding OutputDirectory}" />
        </StackPanel>

        <Button Command="{Binding Command}">Create lyric videos</Button>
    </StackPanel>
</Window>
